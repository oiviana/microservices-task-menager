{
  "name": "microservices-task-menager",
  "private": true,
  "version": "1.0.0",
  "description": "a microservices project with nestJS",
  "repository": "https://github.com/oiviana/microservices-task-menager.git",
  "author": "oiviana <vianalucas80@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "docker:up": "docker compose up",
    "docker:build": "docker compose build",
    "docker:down": "docker compose down",
    "docker:restart": "docker compose restart",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v",
    "docker:web": "docker compose logs -f web",
    "docker:api": "docker compose logs -f api-gateway",
    "docker:auth": "docker compose logs -f auth-service",
    "docker:tasks": "docker compose logs -f tasks-service",
    "docker:notifications": "docker compose logs -f notifications-service"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  }
}
